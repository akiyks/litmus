C C-3.LB+o-assign+deref-addr-o
{
x = 0;
y = 0;
z = 0;
}

P0(int *x, int *y)
{
	r1 = READ_ONCE(*x);
	rcu_assign_pointer(*y, 1);
}

P1(int *y, int *z)
{
	r3 = rcu_dereference(*y);
	r9 = (r3 ^ r3);
	r4 = (z + r9);
	rcu_assign_pointer(*r4, 1);
}

P2(int *x, int *z)
{
	r5 = rcu_dereference(*z);
	r9 = (r5 ^ r5);
	r6 = (x + r9);
	WRITE_ONCE(*r6, 1);
}

exists(0:r1=1 /\ 1:r3=1 /\ 2:r5=1)
